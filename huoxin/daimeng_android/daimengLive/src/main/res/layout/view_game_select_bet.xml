<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:background="#50000000"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <LinearLayout
            android:id="@+id/ll_game_recharge"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/diamone"
                android:layout_width="15dp"
                android:layout_height="15dp" />
            <TextView
                android:id="@+id/tv_game_my_coin"
                android:text="0"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/tv_game_recharge"
                android:textColor="@color/global"
                android:text="充值"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_game_select_num_group"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/rl_game_select_num1"
                android:background="@drawable/bg_game_fruits_select_num_2"
                android:layout_width="30dp"
                android:layout_height="30dp">
                <ImageView
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/dianzan2"
                    android:layout_width="10dp"
                    android:layout_height="10dp" />
                <TextView
                    android:text="10"
                    android:textSize="@dimen/text_size_7"
                    android:textColor="@color/white"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:id="@+id/rl_game_select_num2"
                android:background="@drawable/bg_game_fruits_select_num"
                android:layout_marginLeft="5dp"
                android:layout_width="30dp"
                android:layout_height="30dp">
                <ImageView
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/dianzan2"
                    android:layout_width="10dp"
                    android:layout_height="10dp" />
                <TextView
                    android:text="100"
                    android:textSize="@dimen/text_size_7"
                    android:textColor="@color/white"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:id="@+id/rl_game_select_num3"
                android:background="@drawable/bg_game_fruits_select_num"
                android:layout_marginLeft="5dp"
                android:layout_width="30dp"
                android:layout_height="30dp">
                <ImageView
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/dianzan2"
                    android:layout_width="10dp"
                    android:layout_height="10dp" />
                <TextView
                    android:text="1000"
                    android:textSize="@dimen/text_size_7"
                    android:textColor="@color/white"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/rl_game_select_num4"
                android:background="@drawable/bg_game_fruits_select_num"
                android:layout_marginLeft="5dp"
                android:layout_width="30dp"
                android:layout_height="30dp">
                <ImageView
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/dianzan2"
                    android:layout_width="10dp"
                    android:layout_height="10dp" />
                <TextView
                    android:text="1万"
                    android:textSize="@dimen/text_size_7"
                    android:textColor="@color/white"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>
</merge>