<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        android:id="@+id/fl_bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp">

        <RelativeLayout
            android:id="@+id/ll_bottom_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/iv_live_chat"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/bg_live_room_info"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingLeft="50dp"
                    android:paddingRight="30dp"
                    android:paddingTop="5dp"
                    android:text="说点什么..."
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_15" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/live_button_comment_new" />
            </RelativeLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="40dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_live_new_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/icon_new"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/iv_live_privatechat"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/btn_show_live_message" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_marginLeft="5dp"
                    android:id="@+id/rl_live_quite_gift"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_live_quick_gift"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/iv_live_quite_gift"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_centerInParent="true" />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/iv_live_chestbox"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/btn_show_chestbox_bg" />

                <ImageView
                    android:id="@+id/iv_live_shar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/btn_show_live_shar" />

                <ImageView
                    android:id="@+id/iv_live_gift"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/btn_show_live_liwu" />

                <ImageView
                    android:id="@+id/iv_live_lit"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/live_button_like"
                    android:visibility="gone" />

            </LinearLayout>


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_live_chat_edit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:background="@drawable/background_gift_item"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:visibility="gone">

            <com.daimeng.livee.widget.BlackButton
                android:id="@+id/tglbtn_danmu_setting"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/tglbtn_live_danmu_setting" />

            <com.daimeng.livee.widget.BlackEditText
                android:id="@+id/et_live_chat_input"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="12"
                android:background="@null"
                android:maxLength="50"
                android:padding="4dp"
                android:paddingLeft="5dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="@dimen/text_size_15" />

            <TextView
                android:id="@+id/bt_send_chat"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:background="@drawable/bg_live_send_chat"
                android:gravity="center"
                android:text="@string/sendchat"
                android:textColor="@color/white" />
        </LinearLayout>
    </FrameLayout>
</merge>