<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_live_root"
    android:background="@drawable/practice_fragment_bg"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/view_live_content">

        <include  layout="@layout/view_live_content"/>

        <!--歌词提示start-->
        <include  layout="@layout/view_live_music_lrc"/>
        <!--歌词提示end-->


        <!--底部菜单-->
        <include layout="@layout/view_show_start_live_button_menu"/>



    </RelativeLayout>

    <Button
        android:id="@+id/btn_live_back_home"
        android:layout_centerInParent="true"
        android:textColor="@color/white"
        android:background="@drawable/btn_circular_fill"
        android:text="回到桌面"
        android:layout_width="200dp"
        android:layout_height="50dp" />

</RelativeLayout>