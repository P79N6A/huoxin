<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background">

    <LinearLayout
        android:id="@+id/rootview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorGray2" />

        <!--头部-->
        <include layout="@layout/view_info_detail_data" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.daimeng.live.ui.customviews.LineControllerView
                android:id="@+id/ll_rank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:canNav="true"
                app:iconRes="@drawable/ic_center_order"
                app:isBottom="true"
                app:name="贡献榜" />


            <com.daimeng.live.ui.customviews.LineControllerView
                android:id="@+id/ll_news_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:canNav="true"
                app:iconRes="@drawable/ic_center_message"
                app:isBottom="true"
                app:name="消息" />


            <com.daimeng.live.ui.customviews.LineControllerView
                android:id="@+id/ll_short_video"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                app:canNav="true"
                app:iconRes="@drawable/ic_center_zuopin"
                app:isBottom="true"
                app:name="我的视频" />

            <com.daimeng.live.ui.customviews.LineControllerView
                android:id="@+id/ll_profit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:canNav="true"
                app:iconRes="@drawable/ic_center_income"
                app:isBottom="true"
                app:name="@string/income" />

            <com.daimeng.live.ui.customviews.LineControllerView
                android:id="@+id/ll_live_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:canNav="true"
                app:iconRes="@drawable/ic_center_income"
                app:isBottom="true"
                app:name="@string/select_live_time" />

            <com.daimeng.live.ui.customviews.LineControllerView
                android:id="@+id/ll_diamonds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:canNav="true"
                app:iconRes="@drawable/ic_center_diamonds"
                app:isBottom="true" />

            <com.daimeng.live.ui.customviews.LineControllerView
                android:id="@+id/ll_vip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:canNav="true"
                app:iconRes="@drawable/ic_center_vip"
                app:isBottom="true"
                app:name="购买会员" />

            <com.daimeng.live.ui.customviews.LineControllerView
                android:id="@+id/ll_family_manage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:canNav="true"
                app:iconRes="@drawable/ic_center_family"
                app:isBottom="true"
                app:name="我的家族" />

            <LinearLayout
                android:id="@+id/ll_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="100dp" />
    </LinearLayout>

</ScrollView>