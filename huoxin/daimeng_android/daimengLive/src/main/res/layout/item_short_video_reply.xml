<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="15dp"
    android:background="@color/main_background">

    <RelativeLayout
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="35dp">

        <com.daimeng.livee.widget.CircleImageView
            android:id="@+id/item_short_video_avatar"
            android:layout_centerVertical="true"
            android:layout_width="35dp"
            android:layout_height="35dp" />

        <RelativeLayout
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/item_short_video_avatar"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="35dp">

            <TextView
                android:textSize="@dimen/text_size_14"
                android:layout_alignParentTop="true"
                android:id="@+id/item_short_video_reply_name"
                android:textColor="@color/colorGray4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="@dimen/text_size_12"
                android:layout_alignParentBottom="true"
                android:id="@+id/item_short_video_reply_time"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorGray3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>


    </RelativeLayout>
    <TextView
        android:id="@+id/item_short_video_reply_body"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="65dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:visibility="gone"
        android:textColor="@color/colorSendName2"
        android:padding="5dp"
        android:background="@color/white"
        android:id="@+id/item_short_video_reply_comment"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="65dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_marginTop="15dp"
        android:layout_height="1px"
        style="@style/h_line"/>
</LinearLayout>