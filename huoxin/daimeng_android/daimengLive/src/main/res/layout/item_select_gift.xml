<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    >
    <ImageView
        android:layout_margin="5dp"
        android:id="@+id/iv_show_gift_selected"
        android:layout_alignParentLeft="true"
        android:layout_width="15dp"
        android:layout_height="15dp"/>


    <LinearLayout

        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        >
        <!--礼物图片-->
        <com.daimeng.live.widget.LoadUrlImageView
            android:id="@+id/iv_show_gift_img"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <!--礼物价格-->
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.daimeng.live.widget.BlackTextView
                android:textSize="@dimen/text_size_10"
                android:textColor="@color/white"
                android:id="@+id/tv_show_gift_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_marginLeft="2dp"
                android:layout_gravity="center"
                android:src="@drawable/diamone"
                android:layout_width="10dp"
                android:layout_height="10dp" />
        </LinearLayout>

        <!--礼物经验值-->
        <com.daimeng.live.widget.BlackTextView
            android:textColor="@color/colorGray3"
            android:textSize="@dimen/text_size_9"
            android:id="@+id/tv_show_gift_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:id="@+id/count_num"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:text="2"
        android:textSize="10sp"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@drawable/point1"
        />
</RelativeLayout>