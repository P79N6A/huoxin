<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android">
    <FrameLayout
        android:layout_marginBottom="10dp"
        android:id="@+id/fl_bottom_menu"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/ll_bottom_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/iv_live_chat"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btn_show_live_chat"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <LinearLayout
                android:layout_alignParentRight="true"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="插件"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:id="@+id/iv_live_open_dialog_menu"
                    android:layout_marginLeft="5dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_live_quick_gift"
                    />

                <TextView
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:id="@+id/iv_live_meiyan"
                    android:layout_marginLeft="5dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/ll_btn_meiyan_nor"/>

                <RelativeLayout
                    android:layout_marginLeft="5dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp">
                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/iv_live_new_message"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/icon_new"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:id="@+id/iv_live_privatechat"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:background="@drawable/btn_show_live_message"/>
                </RelativeLayout>

                <ImageView
                    android:textSize="@dimen/text_size_15"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:id="@+id/iv_live_music"
                    android:layout_marginLeft="5dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/live_button_music_normal"/>

                <ImageView
                    android:id="@+id/iv_live_camera_control"
                    android:layout_marginLeft="5dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/live_button_clean_on_normal"/>
                <ImageView
                    android:scaleType="centerCrop"
                    android:id="@+id/iv_live_back"
                    android:layout_marginLeft="5dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/live_button_close_bottom_normal"/>
            </LinearLayout>

        </RelativeLayout>


        <LinearLayout
            android:visibility="gone"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:gravity="center"
            android:layout_margin="5dp"
            android:background="@drawable/background_gift_item"
            android:layout_gravity="center_vertical"
            android:id="@+id/ll_live_chat_edit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <com.daimeng.live.widget.BlackButton
                android:layout_gravity="center"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:id="@+id/tglbtn_danmu_setting"
                android:background="@drawable/tglbtn_live_danmu_setting"
                />

            <com.daimeng.live.widget.BlackEditText
                android:textColorHint="@color/white"
                android:maxLength="50"
                android:textSize="@dimen/text_size_15"
                android:padding="4dp"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:textColor="@color/white"
                android:paddingLeft="5dp"
                android:id="@+id/et_live_chat_input"
                android:layout_weight="12"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <TextView
                android:gravity="center"
                android:background="@drawable/bg_live_send_chat"
                android:id="@+id/bt_send_chat"
                android:textColor="@color/white"
                android:text="@string/sendchat"
                android:layout_width="50dp"
                android:layout_height="30dp" />
        </LinearLayout>
    </FrameLayout>
</merge>