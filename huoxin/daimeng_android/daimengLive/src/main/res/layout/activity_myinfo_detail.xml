<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
              xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.daimeng.livee.ui.customviews.ActivityTitle
        android:id="@+id/view_title"
        android:background="@color/global"
        app:titleColor="@color/black"
        app:titleText="@string/edit_info"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <View
        android:layout_height="1px"
        style="@style/h_line" />
    <RelativeLayout
        android:background="@color/white"
        android:id="@+id/rl_userHead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="horizontal"
        android:padding="@dimen/space_16" >

        <com.daimeng.livee.widget.BlackTextView
            android:layout_centerVertical="true"
            android:id="@+id/tv_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/space_4"
            android:text="@string/head"
            android:textSize="@dimen/text_size_16" />
        <com.daimeng.livee.widget.AvatarView
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:id="@+id/av_userHead"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <ImageView
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/me_go"/>
    </RelativeLayout>

    <View
        android:layout_height="1px"
        style="@style/h_line" />

    <RelativeLayout
        android:background="@color/white"
        android:id="@+id/rl_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="horizontal"
        android:padding="@dimen/space_16" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/space_4"
            android:text="ID(点击复制)"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_size_16"
            />

        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/tv_id"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:background="@null"
            android:cursorVisible="false"
            android:textColorHint="#E2E2E5"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <View
        android:layout_height="1px"
        style="@style/h_line" />

    <RelativeLayout
        android:background="@color/white"
        android:id="@+id/rl_userNick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="horizontal"
        android:padding="@dimen/space_16" >

        <com.daimeng.livee.widget.BlackTextView
            android:id="@+id/tv_qiaming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/space_4"
            android:text="@string/nick_name"
            android:textSize="@dimen/text_size_16" />

        <com.daimeng.livee.widget.BlackTextView
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:id="@+id/tv_userNick"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_16" />
        <ImageView
            android:id="@+id/iv_nick2"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/me_go"/>
    </RelativeLayout>

    <View
        android:layout_height="1px"
        style="@style/h_line" />

    <RelativeLayout
        android:background="@color/white"
        android:id="@+id/rl_userSign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="horizontal"
        android:padding="@dimen/space_16" >

        <com.daimeng.livee.widget.BlackTextView
            android:id="@id/tv_qiaming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/space_4"
            android:text="签名"
            android:textSize="@dimen/text_size_16"
            />

        <com.daimeng.livee.widget.BlackTextView
            android:singleLine="true"
            android:ellipsize="end"
            android:maxEms="7"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:id="@+id/tv_userSign"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_16" />
        <ImageView
            android:id="@+id/iv_sign3"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/me_go"/>
    </RelativeLayout>

    <View
        android:layout_height="1px"
        style="@style/h_line" />
    <RelativeLayout
        android:background="@color/white"
        android:visibility="gone"
        android:id="@+id/rl_userBirthday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="horizontal"
        android:padding="@dimen/space_16" >

        <com.daimeng.livee.widget.BlackTextView
            android:id="@+id/tv_birthday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/space_4"
            android:text="@string/birthday"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_size_16"
            />

        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/et_info_birthday"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:background="@null"
            android:cursorVisible="false"
            android:hint="@string/fill_in_birthday"
            android:textColorHint="#E2E2E5"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <View
        android:layout_height="1px"
        style="@style/h_line" />
    <RelativeLayout
        android:background="@color/white"
        android:id="@+id/rl_userSex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="horizontal"
        android:padding="@dimen/space_16" >

        <com.daimeng.livee.widget.BlackTextView
            android:id="@id/tv_qiaming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/space_4"
            android:text="@string/sex"
            android:textSize="@dimen/text_size_16"
            />

        <ImageView
            android:layout_marginRight="20dp"
            android:src="@drawable/global_female"
            android:layout_alignParentRight="true"
            android:id="@+id/iv_info_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/me_go"/>
    </RelativeLayout>
    <View
        android:layout_height="1px"
        style="@style/h_line" />
</LinearLayout>